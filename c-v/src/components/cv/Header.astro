---
import { differenceInYears } from "date-fns";
import type { Myself } from "./cv";
import { formatDate } from "date-fns";

interface Props {
    cv: Myself;
}

const { cv } = Astro.props;
---

<header
    class="flex flex-col sm:flex-row items-start justify-between mb-8 p-4 md:p-6"
>
    <div class="flex items-center mb-4 sm:mb-0">
        <div>
            <h1 class="text-2xl md:text-3xl font-bold text-gray-800">
                {cv.name}
            </h1>
            {
                cv.birthDate && (
                    <p class="text-sm text-gray-600 mt-1">
                        {formatDate(cv.birthDate, "yyyy-MM-dd")}
                    </p>
                )
            }
            <p class="text-sm text-gray-600">{cv.location}</p>
        </div>
    </div>
    <div class="text-left sm:text-right text-sm text-gray-700 space-y-1">
        <p>
            <a href={`mailto:${cv.email}`} class="hover:text-blue-600"
                >{cv.email}</a
            >
        </p>
        <p>{cv.phone}</p>
        <p>
            <a
                href={cv.github}
                target="_blank"
                rel="noopener noreferrer"
                class="hover:text-blue-600">{cv.github}</a
            >
        </p>

        {
            cv.lastUpdate && (
                <p class="text-sm text-gray-600 mt-4">
                    Last updated: {formatDate(cv.lastUpdate, "yyyy-MM-dd")}
                </p>
            )
        }
    </div>
</header>
